@page
@model Zajecia_PS04.Pages.Login.UserLoginModel
@{
    ViewData["Title"] = "Login";
}

<div>
    @Model.Message
</div>
<h2>Login</h2>
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="user.UserName" class="control-label"></label>
            <div class="col-sm-6">
                <input asp-for="user.UserName" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="user.password" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input type="password" asp-for="user.password" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn btn-primary submitx">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>
