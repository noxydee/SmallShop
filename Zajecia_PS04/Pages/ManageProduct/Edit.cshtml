@page
@model Zajecia_PS04.Pages.EditModel
@{

    ViewData["Title"] = "Edytuj Produkt";
}

<h2>Edytuj Produkt</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        
        <input asp-for="EditProduct.id" class="form-control" type="hidden">
        <div class="form-group">
            <h4><label asp-for="EditProduct.name" class="control-label col-sm2"></label></h4>
            <div class="col-sm-6">
                <input asp-for="EditProduct.name" class="form-control">
                <span asp-validation-for="EditProduct.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <h4><label asp-for="EditProduct.price" class="control-label col-sm2"></label></h4>
            <div class="col-sm-6">
                <input asp-for="EditProduct.price" class="form-control">
                <span asp-validation-for="EditProduct.price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <h4><label asp-for="EditProduct.Category" class="control-label col-sm2"></label></h4>
            <div class="col-sm-6">
                <select list="Categories" asp-for="EditProduct.Category" class="form-control custom-select">
                    <datalist id="Categories">
                        @foreach (var category in Model.Categories)
                        {
                            <option>@category.ShortName</option>
                        }
                    </datalist>
                </select>
                <span asp-validation-for="EditProduct.Category" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>