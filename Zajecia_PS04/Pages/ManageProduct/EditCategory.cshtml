@page
@model Zajecia_PS04.Pages.EditCategoryModel
@{
}

<h2>Edytuj Kategorie</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <input asp-for="EditCategory.Id" class="form-control" type="hidden">
        <div class="form-group">
            <h4><label asp-for="EditCategory.ShortName" class="control-label col-sm2"></label></h4>
            <div class="col-sm-6">
                <input asp-for="EditCategory.ShortName" class="form-control">
                <span asp-validation-for="EditCategory.ShortName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <h4><label asp-for="EditCategory.LongName" class="control-label col-sm2"></label></h4>
            <div class="col-sm-6">
                <input asp-for="EditCategory.LongName" class="form-control">
                <span asp-validation-for="EditCategory.LongName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submitx" class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>
